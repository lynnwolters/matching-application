<!DOCTYPE html>
<html lang="nl">
    
<head>

    <!-- Meta -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Title -->
    <title>PixelJobs - Home</title>

    <!-- Js -->
    <script defer src="./js/save-button.js"></script>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Display:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Stylesheets -->
    <link rel="stylesheet" type="text/css" href="./css/style.css">
    <link rel="stylesheet" type="text/css" href="./css/menu.css">
    <link rel="stylesheet" type="text/css" href="./css/index/index-nav.css">
    <link rel="stylesheet" type="text/css" href="./css/index/index-header.css">
    <link rel="stylesheet" type="text/css" href="./css/index/index-main.css">

</head>

<body>

    <!-- Nav -->
    <nav>
        <h1>Profiel</h1>
    </nav>

    <!-- Header -->
    <header>
        <img src="./img/profiel-foto.jpg" alt="profiel-foto">
        <section>

            <% if(profile.firstName){ %>
                <h2> <%= profile.firstName %> </h2>
            <% } else{ %>  
                <h2>Geen voornaam</h2>
            <% } %>  

            <% if(profile.lastName){ %>
                <h2> <%= profile.lastName %> </h2>
            <% } else{ %>  
                <h2>Geen achternaam</h2>
            <% } %>  

            <% if(profile.jobFunction){ %>
                <p> <%= profile.jobFunction %> </p>
            <% } else{ %>  
                <p>Geen functie</p>
            <% } %>  

            <span>
                <p>

                    <img src="./img/leeftijd.svg" alt="leeftijd"> 

                    <% if(profile.age){ %>
                        <p> <%= profile.age %> </p>
                    <% } else{ %>  
                        <p>Geen leeftijd</p>
                    <% } %>  

                </p>
                <p>

                    <img src="./img/locatie.svg" alt="locatie">

                    <% if(profile.residence){ %>
                        <p> <%= profile.residence %> </p>
                    <% } else{ %>  
                        <p>Geen woonplaats</p>
                    <% } %>  
                </p>
            </span>
        </section>
        <a class="button-hover" href="/profiel-bewerken"><img src="./img/bewerk.svg" alt="bewerk">Profiel bewerken</a>
    </header>

    <!-- Main -->
    <main>
        <section>

            <h2>Over mij</h2>

            <% if(profile.aboutMe){ %>
                <p> <%= profile.aboutMe %> </p>
            <% } else{ %>  
                <p>Geen over mij</p>
            <% } %>  

        </section>
        <section>

            <h2>Opleidingen</h2>

            <% if(profile.education){ %>
                <p> <%= profile.education %> </p>
            <% } else{ %>  
                <p>Geen opleidingen</p>
            <% } %>  

        </section>
        <section>

            <h2>Werkervaring</h2>

            <% if(profile.workExperience){ %>
                <p> <%= profile.workExperience %> </p>
            <% } else{ %>  
                <p>Geen werkervaring</p>
            <% } %>   

        </section>
        <section>

            <h2>Soft skills</h2>
            
            <% if(profile.softSkills){ %>
                <p> <%= profile.softSkills %> </p>
            <% } else{ %>  
                <p>Geen soft skills</p>
            <% } %>   

        </section>
        <section>

            <h2>Hard skills</h2>

            <% if(profile.hardSkills){ %>
                <p> <%= profile.hardSkills %> </p>
            <% } else{ %>  
                <p>Geen hard skills</p>
            <% } %>

        </section>
    </main>

    <!-- Menu partial -->
    <%- include('menu-partial') %>
    
</body>

</html>