<!DOCTYPE html>
<html lang="nl">
    
<head>

    <!-- META -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- TITLE -->
    <title>PixelJobs - Home</title>

    <!-- JS -->
    <script defer src="./js/save-button.js"></script>
    <!-- <script defer src="./js/input-fields.js"></script> -->

    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Display:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- STYLESHEETS -->
    <link rel="stylesheet" type="text/css" href="./css/style.css">
    <link rel="stylesheet" type="text/css" href="./css/menu.css">
    <link rel="stylesheet" type="text/css" href="./css/index/index-nav.css">
    <link rel="stylesheet" type="text/css" href="./css/index/index-header.css">
    <link rel="stylesheet" type="text/css" href="./css/index/index-main.css">

</head>

<body>

    <!-- NAV -->
    <nav>
        <h1>Profiel</h1>
    </nav>

    <!-- HEADER -->
    <header>
        <img src="./img/profiel-foto.jpg" alt="profiel-foto">
        <section>

            <% if(profiel.firstName){ %>
                <h2> <%= profiel.firstName %> </h2>
            <% } else{ %>  
                <h2>Geen voornaam</h2>
            <% } %>  

            <% if(profiel.lastName){ %>
                <h2> <%= profiel.lastName %> </h2>
            <% } else{ %>  
                <h2>Geen achternaam</h2>
            <% } %>  

            <% if(profiel.jobFunction){ %>
                <p> <%= profiel.jobFunction %> </p>
            <% } else{ %>  
                <p>Geen functie</p>
            <% } %>  

            <span>
                <p>

                    <img src="./img/leeftijd.svg" alt="leeftijd"> 

                    <% if(profiel.age){ %>
                        <p> <%= profiel.age %> </p>
                    <% } else{ %>  
                        <p>Geen leeftijd</p>
                    <% } %>  

                </p>
                <p>

                    <img src="./img/locatie.svg" alt="locatie">

                    <% if(profiel.residence){ %>
                        <p> <%= profiel.residence %> </p>
                    <% } else{ %>  
                        <p>Geen woonplaats</p>
                    <% } %>  
                </p>
            </span>
        </section>
        <a class="button-hover" href="/profiel-bewerken"><img src="./img/bewerk.svg" alt="bewerk">Profiel bewerken</a>
    </header>

    <!-- MAIN -->
    <main>
        <section>

            <h2>Over mij</h2>

            <% if(profiel.aboutMe){ %>
                <p> <%= profiel.aboutMe %> </p>
            <% } else{ %>  
                <p>Geen over mij</p>
            <% } %>  

        </section>
        <section>

            <h2>Opleidingen</h2>

            <% if(profiel.education){ %>
                <p> <%= profiel.education %> </p>
            <% } else{ %>  
                <p>Geen opleidingen</p>
            <% } %>  

        </section>
        <section>

            <h2>Werkervaring</h2>

            <% if(profiel.workExperience){ %>
                <p> <%= profiel.workExperience %> </p>
            <% } else{ %>  
                <p>Geen werkervaring</p>
            <% } %>   

        </section>
        <section>

            <h2>Soft skills</h2>
            
            <% if(profiel.softSkills){ %>
                <p> <%= profiel.softSkills %> </p>
            <% } else{ %>  
                <p>Geen soft skills</p>
            <% } %>   

        </section>
        <section>

            <h2>Hard skills</h2>

            <% if(profiel.hardSkills){ %>
                <p> <%= profiel.hardSkills %> </p>
            <% } else{ %>  
                <p>Geen hard skills</p>
            <% } %>

        </section>
    </main>

    <!-- MENU -->
    <%- include('menu-partial') %>
    
</body>

</html>